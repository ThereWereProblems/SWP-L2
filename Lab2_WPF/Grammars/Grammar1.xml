<grammar version="1.0" xml:lang="pl-pl" root="rootRule" xmlns="http://www.w3.org/2001/06/grammar"
         tag-format="semantics/1.0">



	<rule id="rootRule">
		<item repeat="0-1">Ile jest</item>
		<ruleref uri="#firstNumber"></ruleref>
		<tag>out.first=rules.latest();</tag>
		<ruleref uri="#operation"></ruleref>
		<tag>out.operation=rules.latest();</tag>
		<ruleref uri="#secondNumber"></ruleref>
		<tag>out.second=rules.latest();</tag>



	</rule>



	<rule id="firstNumber">
		<one-of>
			<item>
				jeden <tag>out="1"</tag>
			</item>
			<item>
				dwa <tag>out="2"</tag>
			</item>
			<item>
				trzy <tag>out="3"</tag>
			</item>
			<item>
				cztery <tag>out="4"</tag>
			</item>
			<item>
				pięć <tag>out="5"</tag>
			</item>
			<item>
				sześć <tag>out="6"</tag>
			</item>
			<item>
				siedem <tag>out="7"</tag>
			</item>
			<item>
				osiem <tag>out="8"</tag>
			</item>
			<item>
				dziewięć <tag>out="9"</tag>
			</item>
			<item>
				zero <tag>out="0"</tag>
			</item>
		</one-of>
	</rule>
	<rule id="secondNumber">
		<one-of>
			<item>
				jeden <tag>out="1"</tag>
			</item>
			<item>
				dwa <tag>out="2"</tag>
			</item>
			<item>
				trzy <tag>out="3"</tag>
			</item>
			<item>
				cztery <tag>out="4"</tag>
			</item>
			<item>
				pięć <tag>out="5"</tag>
			</item>
			<item>
				sześć <tag>out="6"</tag>
			</item>
			<item>
				siedem <tag>out="7"</tag>
			</item>
			<item>
				osiem <tag>out="8"</tag>
			</item>
			<item>
				dziewięć <tag>out="9"</tag>
			</item>
			<item>
				zero <tag>out="0"</tag>
			</item>
		</one-of>
	</rule>
	<rule id="operation">
		<one-of>
			<item>
				plus<tag>out="plus"</tag>
			</item>
			<item>
				dodaj<tag>out="plus"</tag>
			</item>
			<item>
				minus<tag>out="minus"</tag>
			</item>
			<item>
				odjąć<tag>out="minus"</tag>
			</item>
			<item>
				podzielić przez<tag>out="divide"</tag>
			</item>
			<item>
				podzielić na<tag>out="divide"</tag>
			</item>
			<item>
				na<tag>out="divide"</tag>
			</item>
			<item>
				razy<tag>out="multiply"</tag>
			</item>
		</one-of>
	</rule>



</grammar>